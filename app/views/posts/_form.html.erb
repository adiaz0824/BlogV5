<!-- Creating a form to input a post from the posts new page -->
<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div id="errors">
			<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>		
		</div>
	<% end %>

<!-- This creates the title for the blog on the post page  -->
<p>
<%= f.label :title %> <br>
<%= f.text_field :title %> 
</p>
<!-- This creates the text for the new post -->
<p>
	<%= f.label :body %> <br>
	<%= f.text_area :body %>
</p>
<!-- This is the submit button -->
<p>
	<%= f.submit %>
</p>
<% end %>